<h3>編集画面</h3>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>感想</h4>
    <%= f.text_area :body %>
    <%= f.submit '保存' %>
    <%= link_to "詳細", book_path(@book)%>
    <%= link_to "戻る", books_path %>
<% end %>