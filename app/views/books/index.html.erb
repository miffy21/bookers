<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>タイトル</th>
			<th>感想</th>
			<th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
    	<% @books.each do |book| %>
    	<tr>
    		<td><%= book.title %></td>
    		<td><%= book.body %></td>
    		<td class= "box1">
    			<%= link_to "詳細", book_path(book.id) %>
    			<%= link_to "編集", edit_book_path(book.id) %>
                <%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h3>New book</h3>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
<h4>タイトル</h4>
<%= f.text_field :title %>
<h4>感想</h4>
<%= f.text_area :body %>
<br><%= f.submit '新規作成' %></br>
<% end %>
